{% extends 'Backbase.html.twig' %}
{% block body %}



    <div class="card">
        <div class="card-body" style="width: 999px;position: center;align-self: center">
            <h1 class="card-title" style="margin-left: 150px;margin-top: 30px">List des Taches</h1>

            <!-- Default Table -->
            <table class="table" style="margin-left: 150px">
                <thead>
                <tr>
                    <th scope="col">Numéro Tache</th>
                    <th scope="col">Nom Tache</th>
                    <th scope="col">Temps Alloué</th>
                    <th scope="col">Etat Tache</th>
                    <th scope="col">Importance</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for tache in taches %}
                    <tr>
                        <td>{{ tache.numTache }}</td>
                        <td>{{ tache.nomTache }}</td>
                        <td>{{ tache.neededTime }}</td>
                        <td>{{ tache.etatTache }}</td>
                        <td>{{ tache.importance }}</td>
                        <td>
                            <a href="{{ path('app_tache_show', {'idTache': tache.idTache}) }}" class="btn btn-dark">show</a>
                            <a href="{{ path('app_tache_edit', {'idTache': tache.idTache}) }}" class="btn btn-outline-primary">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <!-- End Default Table Example -->
        
        </div><a style="margin-left: 850px;margin-bottom: 30px" href="{{ path('app_tache_new') }}"><button type="submit" class="btn btn-primary">Create new</button></a>

    </div>
    {% endblock %}
